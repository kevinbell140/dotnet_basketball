@model IEnumerable<NBAMvc1._1.Models.MyTeam>

@{
    ViewData["Title"] = "Index";
}


    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h3>My Teams</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <a asp-action="Create">Create New</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.Name)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var team in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(m => team.Name)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@team.MyTeamID">Edit</a> |
                                <a asp-action="Details" asp-route-id="@team.MyTeamID">Details</a> |
                                <a asp-action="Delete" asp-route-id="@team.MyTeamID">Delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
