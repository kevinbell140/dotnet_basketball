@model NBAMvc1._1.Models.MyTeam

@{
    ViewData["Title"] = "Create";
}


    <div class="container container-fluid bg-white">
        <div class="row">
            <div class="col-md-12">
                <h3>Register new team</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input type="text" asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="FantasyLeagueID" class="form-control" value="@ViewData["LeagueID"]" />
                        <input type="hidden" asp-for="UserID" class="form-control" value="@ViewData["UserID"]" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
