@model NBAMvc1._1.ViewModels.MyTeamDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h3>@Model.MyTeam.Name</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Pos</th>
                            <th>Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model.Players)
                        {
                            <tr>
                                <td>@p.PlayerNav.Position</td>
                                <td>@p.PlayerNav.FullName</td>
                                <td><a asp-controller="PlayerMyTeams" asp-action="Create" asp-route-teamID="@Model.MyTeam.MyTeamID">Add/Remove</a> </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


<div>
    <a asp-action="Edit" asp-route-id="@Model.MyTeam.MyTeamID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
