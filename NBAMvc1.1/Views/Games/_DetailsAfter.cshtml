                            <td>3PA</td>
                            <td>3P%</td>
                            <td>FT</td>
                            <td>FTA</td>
                            <td>FT%</td>
                            <td>ORB</td>
                            <td>DRB</td>
                            <td>TRB</td>
                            <td>AST</td>
                            <td>STL</td>
                            <td>BLK</td>
                            <td>TO</td>
                            <td>PF</td>
                            <td>PTS</td>
                            <td>+/-</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var g in Model.PlayerGameStatsNav.Where(a => a.PlayerNav.TeamID == Model.AwayTeamID && a.Started == 1))
                        {
                            if (g != null)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => g.PlayerNav.Position)</td>
                                    <td><a asp-controller="Players" asp-action="Details" asp-route-id="@g.PlayerID">@g.PlayerNav.FullName</a></td>
                                    <td>@Html.DisplayFor(m => g.Minutes)</td>
                                    <td>@Html.DisplayFor(m => g.FieldGoalsMade)</td>
                                    <td>@Html.DisplayFor(m => g.FieldGoalsAttempted)</td>
                                    <td>@Html.DisplayFor(m => g.FieldGoalsPercentage)</td>
                                    <td>@Html.DisplayFor(m => g.ThreePointersMade)</td>
                                    <td>@Html.DisplayFor(m => g.ThreePointersAttempted)</td>
                                    <td>@Html.DisplayFor(m => g.ThreePointersPercentage)</td>
                                    <td>@Html.DisplayFor(m => g.FreeThrowsMade)</td>
                                    <td>@Html.DisplayFor(m => g.FreeThrowsAttempted)</td>
                                    <td>@Html.DisplayFor(m => g.FreeThrowsPercentage)</td>
                                    <td>@Html.DisplayFor(m => g.OffensiveRebounds)</td>
                                    <td>@Html.DisplayFor(m => g.DefensiveRebounds)</td>
                                    <td>@Html.DisplayFor(m => g.Rebounds)</td>
                                    <td>@Html.DisplayFor(m => g.Assists)</td>
                                    <td>@Html.DisplayFor(m => g.Steals)</td>
                                    <td>@Html.DisplayFor(m => g.BlockedShots)</td>
                                    <td>@Html.DisplayFor(m => g.Turnovers)</td>
                                    <td>@Html.DisplayFor(m => g.PersonalFouls)</td>
                                    <td>@Html.DisplayFor(m => g.Points)</td>
                                    <td>@Html.DisplayFor(m => g.PlusMinus)</td>
                                </tr>
                            }
                        }
